@model StudentManagement.Dto.CourseModel.EditCourseDto

@{
    ViewData["Title"] = "Edit Course";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card border-0 shadow-sm rounded-3">
                <div class="card-header bg-white border-bottom text-center py-3">
                    <h5 class="mb-0 fw-semibold text-dark">Edit Course</h5>
                    <small class="text-muted">Update course information</small>
                </div>

                <div class="card-body p-4">
                    <form asp-action="Edit" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="Id" />

                        <div class="mb-4">
                            <label asp-for="CourseName" class="form-label fw-medium"></label>
                            <input asp-for="CourseName"
                                   class="form-control form-control-lg"
                                   placeholder="Enter course name" />
                            <span asp-validation-for="CourseName" class="text-danger small"></span>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-action="FrontPage" class="btn btn-outline-secondary">
                                Cancel
                            </a>
                            <button type="submit" class="btn btn-primary">
                                Save Changes
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        border-radius: 14px;
    }

    .form-control {
        border-radius: 10px;
    }

    .form-control:focus {
        box-shadow: none;
        border-color: #0d6efd;
    }
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
