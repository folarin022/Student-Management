@using StudentManagement.Dto.CourseModel
@model List<CourseDto>

@{
    ViewData["Title"] = "Courses";
}

<div class="container mt-4">
    <h1>Courses</h1>

    @if (Model.Any())
    {
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Course Name</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var course in Model)
                {
                    <tr>
                        <td>@course.CourseName</td>
                        <td>
                            <a asp-action="Details" asp-route-id="@course.Id">View</a> |
                            <a asp-action="Edit" asp-route-id="@course.Id">Edit</a> |
                            <form asp-action="Delete" method="post" class="d-inline">
                                <input type="hidden" name="id" value="@course.Id" />
                                <button type="submit" class="btn btn-link p-0">Delete</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No courses available.</p>
    }

    <a asp-action="Create" class="btn btn-primary">Add New Course</a>
</div>